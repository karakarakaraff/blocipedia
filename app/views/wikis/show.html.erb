<div class="row">
  <div class="col-md-12">
    <h1><%= @wiki.title %></h1>
    <p><%= @wiki.body %></p>
    <p>&nbsp;</p>
    <p>
      <% if user_is_authorized_for_edit? %>
        <%= link_to "Edit wiki", edit_wiki_path(@wiki), class: 'button' %>
      <% end %>
      <% if user_is_authorized_for_delete? %>
        <%= link_to "Delete wiki", [@wiki], method: :delete, class: 'button', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
      <% end %>
      <%= link_to "View all wikis", wikis_path, class: 'button' %>
    </p>
  </div>
</div>
